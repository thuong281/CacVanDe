<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="1">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dialog_show_full_sos_image_btn_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_left" />
        <ImageView
            android:id="@+id/dialog_show_full_sos_image_btn_previous"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/dialog_show_full_sos_image_txt_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_weight="1"
            android:text="0/0"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/dialog_show_full_sos_image_btn_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:rotation="180"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/ic_arrow_left" />

    </RelativeLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/dialog_show_full_sos_image_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"/>


</RelativeLayout>